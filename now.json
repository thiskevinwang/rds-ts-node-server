{
  "version": 2,
  "builds": [
    {
      "src": "*.ts",
      "use": "@now/node-server"
    }
  ],
  "routes": [{ "src": "/graphql", "dest": "index.ts" }],
  "build": {
    "env": {
      "MY_AWS_ACCESS_KEY_ID": "@my_aws_access_key_id",
      "MY_AWS_SECRET_ACCESS_KEY": "@my_aws_secret_access_key",
      "RDS_DB_HOST": "@rds_db_host",
      "RDS_DB_PORT": "@rds_db_port",
      "RDS_DB_USERNAME": "@rds_db_username",
      "RDS_DB_PASSWORD": "@rds_db_password",
      "RDS_DB_DATABASE": "@rds_db_database",
      "APP_SECRET": "@app_secret",
      "S3_BUCKET": "@s3_bucket",
      "API_GATEWAY": "@api_gateway"
    }
  },
  "env": {
    "MY_AWS_ACCESS_KEY_ID": "@my_aws_access_key_id",
    "MY_AWS_SECRET_ACCESS_KEY": "@my_aws_secret_access_key",
    "RDS_DB_HOST": "@rds_db_host",
    "RDS_DB_PORT": "@rds_db_port",
    "RDS_DB_USERNAME": "@rds_db_username",
    "RDS_DB_PASSWORD": "@rds_db_password",
    "RDS_DB_DATABASE": "@rds_db_database",
    "APP_SECRET": "@app_secret",
    "S3_BUCKET": "@s3_bucket",
    "API_GATEWAY": "@api_gateway"
  }
}
